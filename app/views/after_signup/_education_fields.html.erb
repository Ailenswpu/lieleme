<div>
    <%= link_to "删除这段学历", '#', class: "remove_fields pull-right" %><br>
    <div class='row' style='margin-top:20px'>
      <div class='col-lg-3'>
	    <%= f.label :school, "学校" %>
      </div>
      <div class='col-lg-9'>
	    <%= f.text_field :school, class: "form-control" %>
    </div>
  </div>
  <div class='row' style='margin-top:20px'>
    <div class='col-lg-3'>
	  <%= f.label :enter_school, "入学时间" %>
    </div>
    <div class='col-lg-9'>
	    <%= f.date_select :enter_school, class: "form-control", discard_day: true, start_year:1980, end_year:Date.today.year %>
    </div>
  </div>
  <div class='row' style='margin-top:20px'>
    <div class='col-lg-3'>
	<%= f.label :leave_school, "毕业时间" %>
    </div>
    <div class='col-lg-9'>
	<%= f.date_select :leave_school, class: "form-control", discard_day: true, start_year:1980, end_year:Date.today.year %>
	<%= f.check_box :uptonow %><span>在读</span>
    </div>
  </div>
  <div class='row' style='margin-top:20px'>
    <div class='col-lg-3'>
	    <%= f.label :major, "专业" %>
    </div>
    <div class='col-lg-9'>
	    <%= f.text_field :major,class: "form-control" %>
    </div>
  </div>
  <div class='row' style='margin-top:20px'>
    <div class='col-lg-3'>
	    <%= f.label :degree,"学位" %>
    </div>
    <div class='col-lg-3'>
	<%= f.select :degree,User::DEGREE_TYPES %><br>
	<%= f.hidden_field :_destroy %>
    </div>
  </div>
</div>
