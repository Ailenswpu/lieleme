<%= form_for @user, url: wizard_path, method: :put do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="container-fluid" style='padding-bottom:50px'>
  <section class="container">
    <div class="container-page">				
      <div class="col-md-4" style='margin-top:50px'>
	<div class="form-group col-lg-6">
	  <%= f.text_field :base_salary,class: "form-control",placeholder:"基本月薪" %>
        </div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :month_num,class: "form-control",placeholder:"双薪月数" %>
        </div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :bonus,class: "form-control",placeholder:"年底奖金" %>
        </div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :housing,class: "form-control",placeholder:"住房补贴" %>
        </div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :transport,class: "form-control",placeholder:"交通补贴" %>
  	</div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :retention_bonus,class: "form-control",placeholder:"续约奖金" %>
  	</div>

	<div class="form-group col-lg-6 select">
		<%= f.select :stock, ["股票","期权"],placeholder:"股票选项" %>
  	</div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :stock_num,class: "form-control",placeholder:"股票数目" %>
  	</div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :expect_package,class: "form-control",placeholder:"期望薪资" %>
  	</div>
	
	<div class="form-group col-lg-6">
		<%= f.text_field :expect_month_salary,class: "form-control",placeholder:"期望月薪" %>
  	</div>
	
  <div class="col-lg-3">
  </div>

	<div class="col-lg-6">
          <%= f.submit "完成",class: "btn btn-success btn-block" %>
  </div>
	
  <% end %>
      </div><!--col-md-4-->
      
    </div>
  </section>
</div>

